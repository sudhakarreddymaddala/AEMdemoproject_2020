<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Accordion"
    sling:resourceType="cq/gui/components/authoring/dialog"
    height="{Long}500">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <accordian
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Accordion"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <linkToNavigation
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                        fieldDescription="Is this section to be linked to Navigation"
                                        name="./hideformobiledevice"
                                        text="Hide accordian section for moblie"
                                        uncheckedValue="{Boolean}false"
                                        value="{Boolean}true"/>
                                    <accordian
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                            name="./accordian">
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <contentTitle
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Content Title"
                                                            fieldLabel="Content Title"
                                                            name="./contentTitle"
                                                            required="{Boolean}true"/>
                                                        <cotentDescription
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                            fieldLabel="Description"
                                                            name="./contentDescription"
                                                            useFixedInlineToolbar="{Boolean}true">
                                                            <htmlRules
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="training/components/content/playRtePlugins/htmlRules"/>
                                                            <rtePlugins
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="training/components/content/playRtePlugins/rtePlugins"/>
                                                            <uiSettings
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="training/components/content/playRtePlugins/uiSettings"/>
                                                        </cotentDescription>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </accordian>
                                </items>
                            </column>
                        </items>
                    </accordian>
                    <accordiaConfig
                        jcr:primaryType="nt:unstructured"
                        jcr:title="AccordianCofig"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <accordianFor
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Accordian For"
                                        name="./accordianFor">
                                        <items jcr:primaryType="nt:unstructured">
                                            <faqs
                                                jcr:primaryType="nt:unstructured"
                                                text="FAQS"
                                                value="faqs"/>
                                            <others
                                                jcr:primaryType="nt:unstructured"
                                                text="Others"
                                                value="others"/>
                                        </items>
                                    </accordianFor>
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="AccordionTitle"
                                        fieldLabel="AccordionTitle"
                                        name="./title"/>
                                    <description
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldLabel="Description"
                                        name="./acDescription"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <htmlRules
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="training/components/content/playRtePlugins/htmlRules"/>
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="training/components/content/playRtePlugins/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="training/components/content/playRtePlugins/uiSettings"/>
                                    </description>
                                    <linkToNavigation
                                        cq:lastReplicated="{Date}2018-11-13T10:55:58.351+05:30"
                                        cq:lastReplicatedBy="admin"
                                        cq:lastReplicationAction="Activate"
                                        jcr:mixinTypes="[cq:ReplicationStatus]"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                        fieldDescription="Is this section to be linked to Navigation"
                                        name="./mobiledevice"
                                        text="Use mobile description"
                                        uncheckedValue="{Boolean}false"
                                        value="{Boolean}true"/>
                                    <mobileDescription
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                        fieldLabel="Mobile Description"
                                        name="./mobileDescription"
                                        useFixedInlineToolbar="{Boolean}true">
                                        <htmlRules
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="training/components/content/playRtePlugins/htmlRules"/>
                                        <rtePlugins
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="training/components/content/playRtePlugins/rtePlugins"/>
                                        <uiSettings
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceSuperType="training/components/content/playRtePlugins/uiSettings"/>
                                    </mobileDescription>
                                    <awalysEnglish
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Awalys English dealing with multi-lingual site tagging"
                                        fieldLabel="Adobe Tracking Name"
                                        name="./awalysEnglish"
                                        required="{Boolean}true"/>
                                </items>
                            </column>
                        </items>
                    </accordiaConfig>
                    <backgroundStyle
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Background Style"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <backgroundColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                        fieldLabel="Background Color:"
                                        name="./backgroundColor"/>
                                    <backgroundImage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        allowUpload="{Boolean}false"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        fieldLabel="Upload Background Image:"
                                        fileReferenceParameter="./fileReferenceBgImg"
                                        mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
                                        multiple="{Boolean}false"
                                        name="./backgroundImage"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true"/>
                                    <backgroundoption
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Background Option"
                                        name="./backOption">
                                        <items jcr:primaryType="nt:unstructured">
                                            <image
                                                jcr:primaryType="nt:unstructured"
                                                text="Image"
                                                value="image"/>
                                            <color
                                                jcr:primaryType="nt:unstructured"
                                                text="Color"
                                                value="color"/>
                                        </items>
                                    </backgroundoption>
                                </items>
                            </column>
                        </items>
                    </backgroundStyle>
                    <linkToNavigation
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Link To Navigation"
                        sling:resourceType="granite/ui/components/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <linkToNavigation
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="Is this section to be linked to Navigation"
                                name="./linkNavigationCheck"
                                text="Link To Navigation?"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <NavigationOptions
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Navigation Mapping"
                                name="./linkNavOption">
                                <datasource
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="/bin/homepagedropdown"/>
                            </NavigationOptions>
                        </items>
                    </linkToNavigation>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>


