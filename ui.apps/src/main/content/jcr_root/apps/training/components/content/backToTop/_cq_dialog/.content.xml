<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured" jcr:title="Text"
	sling:resourceType="cq/gui/components/authoring/dialog"
	helpPath="https://www.adobe.com/go/aem_cmp_text_v2">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/container">
		<items jcr:primaryType="nt:unstructured">
			<columns jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
				margin="{Boolean}true">
				<items jcr:primaryType="nt:unstructured">
					<column granite:class="cq-RichText-FixedColumn-column"
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<text jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
								fieldDescription="Leave empty to use the page title."
								fieldLabel="Text" name="./text" />
							<backgroundImage
								jcr:primaryType="nt:unstructured"
								sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
								allowUpload="{Boolean}false" autoStart="{Boolean}false"
								class="cq-droptarget" fieldLabel="Background Image"
								fileReferenceParameter="./bgImage"
								mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
								multiple="{Boolean}false" name="./backgroundImage"
								uploadUrl="${suffix.path}" useHTML5="{Boolean}true" />
							<backgroundColour
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
								fieldLabel="Background Color" name="./backgroundColour" />
							<backgroundoption
								granite:class="cq-dialog-dropdown-showhide"
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/select"
								fieldLabel="Background Option" name="./backOption">
								<items jcr:primaryType="nt:unstructured">
									<image jcr:primaryType="nt:unstructured" text="Image"
										value="image" />
									<color jcr:primaryType="nt:unstructured" text="Color"
										value="color" />
								</items>
							</backgroundoption>
						</items>
					</column>
				</items>
			</columns>
		</items>
	</content>
</jcr:root>
