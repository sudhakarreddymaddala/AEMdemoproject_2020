<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Category Filter"
    sling:resourceType="cq/gui/components/authoring/dialog"
    height="{Long}500"
    width="{Long}600">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <categoryFilter
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Category Filter Config"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <selectCategory
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Category For"
                                name="./categoryFor">
                                <items jcr:primaryType="nt:unstructured">
                                    <characters
                                        jcr:primaryType="nt:unstructured"
                                        text="Characters"
                                        value="character"/>
                                    <products
                                        jcr:primaryType="nt:unstructured"
                                        text="Products"
                                        value="product"/>
                                </items>
                            </selectCategory>
                            <alwaysEnglish
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Always English check for Multi-Lingual  Site Tagging"
                                fieldLabel="Adobe Tracking Name"
                                name="./alwaysEnglish"
                                required="true"/>
                            <categoryDisplay
                                granite:class="cq-dialog-dropdown-showhide"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Category Display Option"
                                name="./categoryDisplay"
                                value="text">
                                <items jcr:primaryType="nt:unstructured">
                                    <text
                                        jcr:primaryType="nt:unstructured"
                                        text="Text"
                                        value="text"/>
                                    <textnImage
                                        jcr:primaryType="nt:unstructured"
                                        text="Text &amp; Image"
                                        value="textnImage"/>
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        text="Image"
                                        value="image"/>
                                </items>
                            </categoryDisplay>
                              <displaycategory
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                defaultChecked="{Boolean}false"
                                name="./displayCategories"
                                text="Show the Categories"
                                uncheckedValue="{Boolean}false"
                                value="{Boolean}true"/>
                            <allLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
                                fieldLabel="Label for all Characters"
                                name="./allLabel"
                                wrapperClass="cmp-image--editor-alt"/>
                            <categoryDetail
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Category List">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                                    name="./categoryDetail">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <category
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathbrowser"
                                                    fieldLabel="Please Choose Category"
                                                    fileReferenceParameter="./category"
                                                    name="./category"
                                                    rootPath="/content/mattel-play"
                                                    useHTML5="{Boolean}true"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </categoryDetail>
                             <adobeTrackingNameForAllLabel
                                     jcr:primaryType="nt:unstructured"
                                     sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                     fieldLabel="Adobe Tracking Name For All Label"
                                     name="./allAnalyticsName"/>
                        </items>
                    </categoryFilter>
                    <backgrondStyle
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Background Style"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <backgroundColour
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                fieldLabel="Background Color"
                                name="./backgroundColour"/>
                            <backgroundImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Upload Background Image:"
                                fileReferenceParameter="./fileReferenceBgImg"
                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
                                multiple="{Boolean}false"
                                name="./backgroundImage"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <backgroundAlt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
                                fieldLabel="Alternative Text"
                                name="./backgroundAlt"
                                required="{Boolean}true"
                                wrapperClass="cmp-image--editor-alt"/>
                        </items>
                    </backgrondStyle>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
