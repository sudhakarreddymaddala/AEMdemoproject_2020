<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured" jcr:title="Category"
	sling:resourceType="cq/gui/components/authoring/dialog"
	height="{Long}500" width="{Long}600">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
		<items jcr:primaryType="nt:unstructured">
			<column jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/container">
				<items jcr:primaryType="nt:unstructured">
					<catName jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
						fieldLabel="Category Name" name="./catName"
						required="{Boolean}true" wrapperClass="cmp-image--editor-alt" />
					<catThumbnail jcr:primaryType="nt:unstructured"
						sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
						allowUpload="{Boolean}false" autoStart="{Boolean}false"
						class="cq-droptarget" fieldLabel="Category Thumbnail"
						fileReferenceParameter="./catThumbnail"
						mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
						multiple="{Boolean}false" name="./catThumbnail"
						required="{Boolean}true" uploadUrl="${suffix.path}"
						useHTML5="{Boolean}true" />
					<catAlt jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
						fieldLabel="Alternative Text" name="./catAlt"
						required="{Boolean}true" wrapperClass="cmp-image--editor-alt" />
					<catUrl jcr:primaryType="nt:unstructured"
						sling:resourceType="/libs/granite/ui/components/coral/foundation/form/pathbrowser"
						fieldLabel="Category URL" name="./catUrl"
						rootPath="/content/training" />
					<catTarget jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/select"
						fieldLabel="Open URL In" name="./catTarget">
						<items jcr:primaryType="nt:unstructured">
							<sameWindow jcr:primaryType="nt:unstructured"
								text="Same Window" value="sameWindow" />
							<newTab jcr:primaryType="nt:unstructured" text="New Tab"
								value="tabWindow" />
							<newWindow granite:hide="${cqDesign.disableSearch}"
								jcr:primaryType="nt:unstructured" text="New Window"
								value="newWindow" />
						</items>
					</catTarget>
				</items>
			</column>
		</items>
	</content>
</jcr:root>
